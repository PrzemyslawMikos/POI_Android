<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/manu_types_element"
        android:clickable="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/menu_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/image1"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/accentWhite"
            android:text="@string/menu_category_list"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_toRightOf="@id/image1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/manu_google_element"
        android:clickable="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/menu_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/image2"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_google_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/accentWhite"
            android:text="@string/menu_google_map"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_toRightOf="@id/image2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/manu_add_element"
        android:clickable="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/menu_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/image3"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/accentWhite"
            android:text="@string/menu_add_point"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_toRightOf="@id/image3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/manu_user_data_element"
    android:clickable="true"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/menu_back"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/image4"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="@color/accentWhite"
        android:text="@string/menu_user_data"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:layout_toRightOf="@id/image4"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/manu_logout_element"
        android:clickable="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/menu_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/image5"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/accentWhite"
            android:text="@string/menu_logout"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:layout_toRightOf="@id/image5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>