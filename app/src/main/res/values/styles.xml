<resources>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/accentWhite</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/colorIron</item>
        <item name="colorControlActivated">@color/accentWhite</item>
        <item name="colorControlHighlight">@color/accentWhite</item>
        <item name="android:textColorHint">@color/colorIron</item>

        <item name="colorButtonNormal">@color/colorAccentDark</item>
        <item name="android:colorButtonNormal">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/accentWhite</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Buttons" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorAccentDark</item>
        <item name="android:colorButtonNormal">@color/colorAccentDark</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorIron</item>
    </style>

    <style name="DividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorAccentDark</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/ActionBar.Subtitle</item>
    </style>

    <style name="ActionBar.Title">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="ActionBar.Subtitle">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>